<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newFunction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="true"
    android:fitsSystemWindows="true"
    android:isScrollContainer="true"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".ui.neighbour_list.NewFunction">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/screen_background_light_transparent"
        android:backgroundTint="@android:color/transparent">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll">

            <ImageView
                android:id="@+id/avatarNeighbour"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nomVoisin2"
                android:textColor="@android:color/white"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="15dp"
                android:textSize="35dp" />

            <ImageButton
                android:id="@+id/bouton_retour"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:background="@android:drawable/screen_background_light_transparent"
                android:backgroundTint="@android:color/transparent"
                android:tint="@android:color/white"
                app:srcCompat="?attr/actionModeCloseDrawable" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/favoriteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginTop="200dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_star_white_24dp"
                android:tint="@android:color/holo_orange_light"
                app:backgroundTint="@drawable/fav_background" />
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp">

            <TextView
                android:id="@+id/nomVoisin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="viewStart"
                android:textSize="35dp" />

            <ImageView
                android:id="@+id/adress"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="65dp"
                android:background="@android:color/transparent"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/baseline_location_on_black_18" />

            <TextView
                android:id="@+id/adresse_voisin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="75dp" />

            <ImageView
                android:id="@+id/phone"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_marginTop="125dp"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/baseline_phone_black_18" />

            <TextView
                android:id="@+id/tel_voisin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="125dp" />

            <ImageView
                android:id="@+id/site"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_marginTop="175dp"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/ic_language_black_24dp" />

            <TextView
                android:id="@+id/site_voisin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="175dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/a_propos"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A propos de moi"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/info_voisin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp" />

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>

</android.support.design.widget.CoordinatorLayout>